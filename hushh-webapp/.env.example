# Frontend Environment Variables
# Copy to .env.local and fill in values. See docs/reference/env_and_secrets.md.

# ============================================================================
# FIREBASE (required for auth)
# ============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# NEXT_PUBLIC_FIREBASE_VAPID_KEY=   # Web push: from Firebase Console → Cloud Messaging → Web Key pair

# ============================================================================
# BACKEND
# ============================================================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# ============================================================================
# BUILD / RUNTIME
# ============================================================================
# CAPACITOR_BUILD is set by npm run cap:build
ENVIRONMENT_MODE=development
# NODE_ENV is set by Next.js

# ============================================================================
# OPTIONAL (server-side only; do not prefix with NEXT_PUBLIC_)
# ============================================================================
# SESSION_SECRET=     # If using session API
# BACKEND_URL=        # Server-side fallback
# NEXT_PUBLIC_CONSENT_TIMEOUT_SECONDS=120
# NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# ============================================================================
# APP REVIEW (production build only; from Secret Manager in Cloud Build)
# ============================================================================
# NEXT_PUBLIC_APP_REVIEW_MODE=false
# NEXT_PUBLIC_REVIEWER_EMAIL=
# NEXT_PUBLIC_REVIEWER_PASSWORD=

{
  // Suppress source map warnings for Next.js internal files
  "debug.javascript.autoAttachFilter": "smart",
  "debug.javascript.suggestPrettyPrinting": false,
  
  // Source map settings
  "debug.javascript.sourceMapRenames": true,
  "debug.javascript.breakOnConditionalError": true,
  
  // Suppress console warnings about invalid source maps
  "debug.console.fontSize": 12,
  "debug.console.wordWrap": true,
  
  // TypeScript/JavaScript settings
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "javascript.preferences.includePackageJsonAutoImports": "on"
}

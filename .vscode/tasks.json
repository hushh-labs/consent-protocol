{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch Chrome for Debug",
      "type": "shell",
      "command": ".\\chrome-launch.ps1 -WorkspaceRoot '${workspaceFolder}'; Start-Sleep -s 2",
      "options": {
        "cwd": "${workspaceFolder}/.vscode"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "Kill Next.js Port",
      "type": "shell",
      "command": "Stop-Process -Id (Get-NetTCPConnection -LocalPort 3000).OwningProcess -Force -ErrorAction SilentlyContinue",
      "problemMatcher": []
    },
    {
      "label": "Kill FastAPI Port",
      "type": "shell",
      "command": "Stop-Process -Id (Get-NetTCPConnection -LocalPort 8000).OwningProcess -Force -ErrorAction SilentlyContinue",
      "problemMatcher": []
    }
  ]
}
